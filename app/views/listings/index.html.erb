<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="page-header">
    <h1>LISTINGS<small>//See what are available</small></h1>
  </div>

  <ul class="nav nav-tabs">
  <li class="active"><a href="#">VIEWS</a></li>
  <li><a href="#">THUMBNAIL</a></li>
  <li><a href="#">LIST</a></li>
  <li><a href="#">CRAIGSLIST</a></li>
</ul>

  <div class="row">
        <% @listings.each do |listing| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
         <%= image_tag listing.image.url(:medium) %>
        <div class="caption">
          <h3><%= listing.description %></h3>
            <p><small><%= listing.address %><br>
                      <%= listing.city %>, <%= listing.country %></small></p>
          <p><%= link_to "VIEW", listing, class: 'btn btn-info btn-sm' %></p>
        </div>
      </div>
    </div>
          <% end %>
  </div>
</div>
