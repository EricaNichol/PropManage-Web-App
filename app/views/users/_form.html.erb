<div class="container">
  <%= simple_form_for (@user||User.new) do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.submit "Sign Up", class: "btn btn-primary btn-sm" %>
  <%= link_to 'Back', users_path, class: "btn btn-default btn-sm" %>
  <% end %>
</div>
